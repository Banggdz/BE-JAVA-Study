	@GetMapping(value = {"", "/"})
	public String hienThiForm(@ModelAttribute("sinhVien") SinhVien sv, Model model) {
	        if (sv == null) {
	            sv = new SinhVien();
	        }
	        model.addAttribute("sinhVien", sv);
	        model.addAttribute("dsSinhVien", svRepository.search(sv));
	        model.addAttribute("template", "sinhvien/sinhvien");
	        model.addAttribute("fragment", "content");
	        model.addAttribute("title", "Quáº£n lÃ½ sinh viÃªn");
	        return "layout";
	   }

